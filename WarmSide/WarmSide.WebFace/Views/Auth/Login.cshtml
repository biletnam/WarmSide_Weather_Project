@using WarmSide.WebFace.Models

@model AuthViewModel


<div class="background" style="background-image: url('../../LoginWallpaper.jpg');">
    <div class="authLogo">
        <span class="header">
            <img src="~/siteIcon.gif">
            <label class="headerText">WarmSide Weather Portal</label>
        </span>
    </div>
    <div class="authForm">
        @using (Html.BeginForm("Login", "Auth", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
        {
            @Html.LabelFor(m => m.Username, new { @class = "authLabel" });
            @Html.TextBoxFor(m => m.Username, new { @class = "authTextBox" })
            <br>
            @Html.ValidationMessageFor(m => m.Username, "Username is required", new { @class = "authValidationLabel" })<br />
            @Html.LabelFor(m => m.Password, new { @class = "authLabel" });
            @Html.TextBoxFor(m => m.Password, new { @class = "authTextBox" })
            <br>
            @Html.ValidationMessageFor(m => m.Password, "Password is required", new { @class = "authValidationLabel" })

            <div>
                <span>
                    <input type="submit" value="Log in" class="authSubmitButton btn btn-info" />
                    <a href="/Auth/LoginViaGoogle" class="btn btn-info authGoogleButton">Login via Google</a>
                
                </span>
            </div>
        }
    </div>
</div>
